<div class="users_width">

  <h2 class="title is-1">Register</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.label :email,class:"label" %><br />
      <div class="control has-icons-left has-icons-right">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input is-danger", placeholder:"Email input" %>
        <span class="icon is-small is-left">
          <i class="fas fa-envelope"></i>
        </span>
        <% if resource.errors[:email].present? %>
          <span class="icon is-small is-right">
            <i class="fas fa-exclamation-triangle"></i>
          </span>
        <% end %>
      </div>
      <% if resource.errors[:email].present? %>
        <ul>
          <% resource.errors[:email].each do |msg| %>
            <li class="help is-danger"><%= msg%></li>
          <% end %>
        </ul>
      <% end %>
    </div>


    <%# <div class="field"> %>
      <%# <%= f.label :password,class:"label" %>
      <%# <% if @minimum_password_length %>
      <%# <em>(<%= @minimum_password_length characters minimum)</em> %>
      <%# <% end <br /> %>
      <%# <%= f.password_field :password, autocomplete: "new-password" %>
    <%# </div> %>


    <div class="field">
      <%= f.label :password,class:"label" %>
      <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      <div class="control has-icons-left">
        <%= f.password_field :password, autocomplete: "new-password", class:"input", placeholder:"Password"  %>
        <span class="icon is-small is-left">
          <i class="fas fa-lock"></i>
        </span>
        <% if resource.errors[:password].present? %>
          <span class="icon is-small is-right">
            <i class="fas fa-exclamation-triangle"></i>
          </span>
        <% end %>
      </div>
      <% if resource.errors[:password].present? %>
        <ul>
          <% resource.errors[:password].each do |msg| %>
            <li class="help is-danger"><%= msg%></li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <%# <div class="field">
      <%= f.label :password_confirmation %><br />
      <%# <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    <%# </div> %>

    <div class="field">
      <%= f.label :password_confirmation,class:"label"%>
      <div class="control has-icons-left">
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"input", placeholder:"Confirm Password" %>
        <span class="icon is-small is-left">
          <i class="fas fa-lock"></i>
        </span>
        <% if resource.errors[:password_confirmation].present? %>
          <span class="icon is-small is-right">
            <i class="fas fa-exclamation-triangle"></i>
          </span>
        <% end %>
      </div>
      <% if resource.errors[:password_confirmation].present? %>
        <ul>
          <% resource.errors[:password_confirmation].each do |msg| %>
            <li class="help is-danger"><%= msg%></li>
          <% end %>
        </ul>
      <% end %>
    </div>

    <div class="field is-grouped">
      <div class="control">
        <%= f.submit "Sign up",class:"button is-link" %>
      </div>
    </div>
  <% end %>

  <%# <%= render "devise/shared/links" %>
</div>


