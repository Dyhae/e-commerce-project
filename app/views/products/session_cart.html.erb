<div id="shoppingCart" class="cart-width">
    <% if current_page?(session_cart_path) %>
        <h1 class=" shopping-h1 title is-1">Shopping cart products</h1>
        <div class = "flex_card">
            <h1 class="price title is-4">price: $<%= @price %></h1>
            <div class="empty-div"></div>
            <%= link_to 'Checkout', user_addresses_path(),class:"button is-success checkout-button" %>
        </div>
        <div class="columns is-multiline margin_around">
            <%= render partial: 'products/product',
                    collection: @cart,
                    locals: { show_link: true, show_page: false, category_page:true} %>
        </div>
    <% end %>

    <% if current_page?(user_addresses_path) %>
        <div class="columns is-multiline margin_around">
            <%= render partial: 'Addresses/address',
                    collection: @userAddresses %>
        </div>
    <% end %>
</div>
